    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Black Magic Probe)",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/e-puck2_main-processor.elf",
            "request": "launch",    
            "preLaunchTask": "Build (make)",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "STM32F103",
            "BMPGDBSerialPort": "/dev/ttyACM0",  // Use whatever serial port makes sense for your OS and BMP setup
            "runToEntryPoint": "main",
            "armToolchainPath": "${workspaceRoot}/gcc-arm-none-eabi-10.3-2021.10/bin",
            "showDevDebugOutput": "raw"
        },

    ]
}