    "version": "0.2.0",
    "configurations": [
        {
            "name": "e-puck2 GDB Serial Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/e-puck2_main-processor.elf",
            "request": "launch",
            "type": "cortex-debug",
            
            // setup gdb
            "servertype": "external",
            "gdbPath": "${workspaceRoot}/gcc-arm-none-eabi-9-2019-q4-major/bin/arm-none-eabi-gdb",
            
            "preLaunchCommands": [
                "target extended-remote /dev/ttyACM0",
                "monitor reset halt",
                "monitor swdp_scan",
                "attach 1", // Attach to the first/only discovered core
            ],
            "postLaunchCommands": [
                "load",
                "b main", // Set a breakpoint at main before continuing
                "c",      // Continue execution to the breakpoint
            ],
            "gdbTarget": "/dev/ttyACM0",
            "device": "STM32F407",
            
            "showDevDebugOutput": "raw",
        }
    ]
}